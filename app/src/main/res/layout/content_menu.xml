                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:text="Shampoo"
                    android:gravity="center_horizontal"
                    android:padding="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/itemradious"
                android:padding="8dp"
                android:layout_marginLeft="4dp"
                android:onClick="checkProducto">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@mipmap/papel"/>
                <TextView
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:text="Papel higienico"
                    android:gravity="center_horizontal"
                    android:padding="3dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
